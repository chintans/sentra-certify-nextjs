enum Status {
  NotStarted     @map("0")
  Assigned       @map("1")
  OnTime         @map("2")
  ActionRequired @map("3")
  Completed      @map("4")
  Delayed        @map("5")
}

enum Stage {
  DataCollection   @map("0")
  DataCalculation  @map("1")
  Verification     @map("2")
  Certification    @map("3")
}

enum CertificateFrequency {
  OneTime     @map("0")
  Continuous  @map("1")
}

enum ProofCategory {
  ActivityData    @map("0")
  EmissionFactor  @map("1")
  Absolute        @map("2")
  Intensity       @map("3")
}

enum UserRole {
  Admin  @map("0")
  User   @map("1")
}